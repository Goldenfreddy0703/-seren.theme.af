<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3001</defaultcontrol>
    <onload>Dialog.Close(fullscreeninfo,true)</onload>
    <onload>Dialog.Close(videoosd,true)</onload>
    <include>Animation_FadeIn</include>
    <controls>
        <include content="OSD_UpNext">
            <param name="label">Up next in</param>
            <param name="icon">$INFO[Window().Property(item.art.fanart)]</param>
            <param name="secondary_label">[COLOR $VAR[ColorHighlight]]$INFO[Player.TimeRemaining(ss),,][/COLOR] seconds...</param>
            <param name="tvshowtitle">Window.Property(item.info.tvshowtitle)</param>
            <param name="title">Window.Property(item.info.title)</param>
            <param name="episode">Window.Property(item.info.episode)</param>
            <param name="season">Window.Property(item.info.season)</param>
            <param name="year">Window.Property(item.info.aired)</param>
            <param name="rating">Window.Property(item.info.rating)</param>
            <definition>
                <control type="image">
                    <height>400</height>
                    <texture>common/dim-top-bezier.png</texture>
                </control>
                <control type="group">
                    <include>Dimension_UpNext</include>
                    <control type="group">
                        <top>-40</top>
                        <height>upnext_image_h</height>
                        <width>upnext_image_w</width>
                        <include>Object_PosterBack</include>
                        <control type="image">
                            <texture diffuse="diffuse/landscape_w356_h200.png">$PARAM[icon]</texture>
                            <aspectratio scalediffuse="false">scale</aspectratio>
                        </control>
                        <control type="progress" id="3014">
                            <bottom>0</bottom>
                            <height>8</height>
                        </control>
                    </control>
                    <control type="grouplist">
                        <top>-20</top>
                        <width>80</width>
                        <orientation>vertical</orientation>
                        <itemgap>0</itemgap>
                        <centerleft>-100</centerleft>
                        <control type="button">
                            <param name="icon">special://skin/extras/icons/play2.png</param>
                            <param name="visible">true</param>
                            <param name="id">3001</param>
                            <param name="groupid">5012</param>
                            <param name="vertical">true</param>
                            <param name="itemgap">0</param>
                        </control>
                        <control type="button">
                            <param name="icon">special://skin/extras/icons/xmark.png</param>
                            <param name="visible">true</param>
                            <param name="id">3002</param>
                            <param name="groupid">5013</param>
                            <param name="vertical">true</param>
                            <param name="itemgap">0</param>
                            <onclick>SetFocus(3013)</onclick>
                            <onclick>Action(Select)</onclick>
                        </control>

                        <control type="image">
                            <bordersize>12</bordersize>
                            <height>80</height>
                            <width>80</width>
                            <texture colordiffuse="panel_fg_70">special://skin/extras/icons/forward-step.png</texture>
                        </control>

                        <control type="image">
                            <bordersize>12</bordersize>
                            <height>80</height>
                            <width>80</width>
                            <texture colordiffuse="panel_fg_70">special://skin/extras/icons/arrow-right.png</texture>
                        </control>


                    </control>
                    <control type="group">
                        <left>upnext_image_w</left>
                        <control type="label">
                            <left>40</left>
                            <aligny>center</aligny>
                            <height>40</height>
                            <label>[COLOR=panel_fg_100]$PARAM[label][/COLOR]$PARAM[secondary_label]</label>
                            <visible>!Integer.IsGreater(Player.TimeRemaining,59)</visible>
                            <textcolor>$VAR[ColorHighlight]</textcolor>
                            <font>font_midi_black</font>
                        </control>

                        <control type="group">
                            <control type="group">
                                <left>40</left>
                                <top>40</top>
                                <height>40</height>
                                <control type="grouplist">
                                    <orientation>horizontal</orientation>
                                    <height>80</height>
                                    <centertop>50%</centertop>
                                    <itemgap>10</itemgap>
                                    <control type="label">
                                        <width>auto</width>
                                        <textcolor>panel_fg_90</textcolor>
                                        <label>$INFO[$PARAM[tvshowtitle]]</label>
                                        <visible>!String.ISEmpty($PARAM[tvshowtitle])</visible>
                                    </control>
                                    <include content="Info_Line_Label">
                                        <visible>!String.ISEmpty($PARAM[tvshowtitle]) + !String.ISEmpty($PARAM[episode])</visible>
                                    </include>
                                    <control type="label">
                                        <width>auto</width>
                                        <textcolor>panel_fg_90</textcolor>
                                        <label>$INFO[$PARAM[season],S,]$INFO[$PARAM[episode],E,]</label>
                                        <visible>!String.ISEmpty($PARAM[episode])</visible>
                                    </control>

                                    <include content="Info_Line_Label">
                                        <visible>[!String.ISEmpty($PARAM[tvshowtitle]) | !String.ISEmpty($PARAM[episode])] + !String.ISEmpty($PARAM[title])</visible>
                                    </include>
                                    <control type="label">
                                        <width>auto</width>
                                        <textcolor>panel_fg_90</textcolor>
                                        <label>$INFO[$PARAM[title]]</label>
                                        <visible>!String.ISEmpty($PARAM[title])</visible>
                                    </control>
                                </control>
                            </control>

                            <control type="group">
                                <left>40</left>
                                <top>80</top>
                                <height>40</height>
                                <itemgap>10</itemgap>
                                <control type="grouplist">
                                    <orientation>horizontal</orientation>
                                    <height>80</height>
                                    <centertop>50%</centertop>
                                    <itemgap>10</itemgap>
                                    <control type="label">
                                        <width>auto</width>
                                        <textcolor>panel_fg_90</textcolor>
                                        <label>$INFO[$PARAM[year]]</label>
                                        <visible>!String.ISEmpty($PARAM[year])</visible>
                                    </control>
                                    <include content="Info_Line_Label">
                                        <visible>!String.ISEmpty($PARAM[year]) + !String.ISEmpty($PARAM[rating])</visible>
                                    </include>
                                    <control type="label">
                                        <width>auto</width>
                                        <textcolor>panel_fg_90</textcolor>
                                        <label>$INFO[$PARAM[rating]]</label>
                                        <visible>!String.ISEmpty($PARAM[rating])</visible>
                                    </control>
                                </control>
                            </control>
                        </control>
                    </control>
                </control>
                <include content="Object_Hidden_Button">
                    <param name="id">3013</param>
                </include>
            </definition>
        </include>
    </controls>
</window>